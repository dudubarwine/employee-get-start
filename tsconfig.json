{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "types": [
            "jest",
            "@testing-library/jest-dom",
            "cypress",
        ],
        "preserveValueImports": false
    },
    "include": [
        "src",
        "**/*.ts"
    ],
    "exclude": [
        "cypress.config.ts",
        "cypress",
        "node_modules"
    ]
}